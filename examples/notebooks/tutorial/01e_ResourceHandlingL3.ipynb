    "                          # Provider\n",
    "                          member=2, experiment='DBLE', namespace='vortex.multi.fr',\n",
    "                          block='forecast',\n",
    "                          # Container\n",
    "                          local='GRIB_[geometry:area]_[member%04d]+[term:fmthm]', format='grib')\n",
    "%ls\n",
    "rhandlers[0].clear()"
